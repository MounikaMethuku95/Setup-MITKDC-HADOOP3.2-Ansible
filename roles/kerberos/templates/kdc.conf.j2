[kdcdefaults]
 kdc_ports = 88
 kdc_tcp_ports = 88

[realms]
 {{ kerberos_realm }} = {
  # Use LDAP backend
  database_module = ldapconf
  acl_file = {{ kadm5_acl_file }}
  dict_file = {{ kerberos_db_dir }}/kadm5.dict
  admin_keytab = {{ kerberos_db_dir }}/kadm5.keytab
  key_stash_file = {{ kerberos_db_dir }}/.k5.{{ kerberos_realm }}
  max_life = 10h 0m 0s
  max_renewable_life = 7d 0h 0m 0s
  master_key_type = aes256-cts
  supported_enctypes = aes256-cts:normal aes128-cts:normal
 }

[dbmodules]
 ldapconf = {
   db_library = kldap
   ldap_kerberos_container_dn = "ou=Kerberos,{{ ldap_basedn }}"
   ldap_kdc_dn = "{{ krb_svc_dn }}"
   ldap_kadmind_dn = "{{ krb_svc_dn }}"
   ldap_service_password_file = {{ kerberos_keyfile }}
   ldap_servers = ldap://localhost
   ldap_conns_per_server = 5
 }